{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - Impulsion Collective Shop{% endblock %}

{% block body %}
    <main class="p-3 p-md-5 m-md-3">
        <h1>{{ product.name }}</h1>

        <div class="row">
                <div class="col-md-4">
                    <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
                </div>
                <div class="col-md-8">
                    <h4>{{ product.name }}</h4>
                    <span>{{ product.subtitle }}</span>
                    <span>{{ (product.price / 100)|number_format(2, ',', '.') }} â‚¬</span>
                    <p>{{ product.description }}</p>
                    <a href="{{ path('add_to_cart', {'id' : product.id }) }}" class="btn btn-primary">Ajouter au panier</a>
                </div>
        </div>
    </main>

{% endblock %}
